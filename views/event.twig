{% include 'partials/header.twig' %}

<article aria-label="{{ event.title }}">
  <div class="container">
    <h2>{{ event.title }}</h2>

    {{ event.body }}

    <p><strong>Start date:</strong> {{ event.formatted_date }}</p>

    {% if event.formatted_end_date %}
    <p><strong>End date:</strong> {{ event.formatted_end_date }}</p>
    {% endif %}
    
    <p><strong>Location:</strong> {{ event.field_location }}</p>
    <p><strong>Hosted by:</strong> {{ event.field_organizations }}</p>

    <p><a href="/" class="btn back">Go back</a></p>
  </div>
</article>

{% include 'partials/footer.twig' %}
